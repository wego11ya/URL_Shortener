<div class="container">
  <h1 class="display-1">URL Shortener</h1>
  <img
    src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
    alt=""
  />
  <h1 class="display-4">Success! Please use this link:</h1>
  <input
    type="url"
    class="form-control"
    name="urlCreated"
    id="urlCreated"
    value="http://localhost:3000/"
  />
  <button
    onclick="copy()"
    type="submit"
    class="btn btn-primary btn-lg mt-4"
  >Copy</button>
</div>
<script>
  function copy() { const copyText = document.querySelector("#urlCreated");
  copyText.select(); copyText.setSelectionRange(0, 99999);
  navigator.clipboard.writeText(copyText.value); alert("URL copied"); }
</script>